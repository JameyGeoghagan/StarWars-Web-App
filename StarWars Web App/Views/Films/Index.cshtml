@model StarWars_Web_App.Models.FilmsListModel.Root

@{
    ViewData["Title"] = "Index";
}
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 text-center justify-content-center px-xl-6 aos-init aos-animate" data-aos="fade-up">

    @foreach(var item in Model.results)
    {
        <div class="col my-3">
            <div class="card border-hover-primary hover-scale">
                <div class="card-body">
                    <div class="text-primary mb-5">
                        <i class="fa-sharp fa-solid fa-circle-user"></i>
                    </div>
                    <h6 class="font-weight-bold mb-3">@item.title</h6>
                    <p class="text-muted mb-0">@item.opening_crawl</p>
                    <button>
                        <i class="bx bx-user me-1"></i><a asp-action="MovieByUrl" asp-route-Url="@item.url">Details</a>
                    </button>
                </div>
            </div>
        </div>
    }
    
</div>

