@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to a StarWars web app</h1>
    <p>Let see what we can do with this api</a>.</p>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 text-center justify-content-center px-xl-6 aos-init aos-animate" data-aos="fade-up">
    <div class="col my-3">
        <div class="card border-hover-primary hover-scale">
            <div class="card-body">
                <div class="text-primary mb-5">
                    <i class="fa-sharp fa-solid fa-circle-user"></i>
                </div>
                <h6 class="font-weight-bold mb-3">People</h6>
                <p class="text-muted mb-0">Search people within the Starwars universe</p>
                <button><a class="nav-link text-dark" asp-area="" asp-controller="People" asp-action="Index">Click Here</a></button>
            </div>
        </div>
    </div>
    <div class="col my-3">
        <div class="card border-hover-primary hover-scale">
            <div class="card-body">
                <div class="text-primary mb-5">
                </div>
                <h6 class="font-weight-bold mb-3">Films</h6>
                <p class="text-muted mb-0">Lets look at the Starwars movies</p>
                <button><a class="nav-link text-dark" asp-area="" asp-controller="Films" asp-action="Index">Click Here</a></button>
            </div>
        </div>
    </div>
</div>

              
