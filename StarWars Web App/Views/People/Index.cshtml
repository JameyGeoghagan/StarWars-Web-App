@model StarWars_Web_App.Models.PeopleModel.Root

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to the people of Starwars!</h1>
<form asp-controller="People" asp-action="Index">
    <p>
        Search Someone: <input type="text" name="searchName" />
        <input type="submit" value="Search" />
    </p>
    <input type="submit" value="Reset" /></p>
 
</form>
<div class="row">
@foreach(var item in Model.results)
{  

        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body">
               
                    <div class="d-flex align-items-center">
                        <div class="flex-1 ms-3">
                            <h5 class="font-size-16 mb-1 text-center"><a href="#" class="text-dark">@item.name</a></h5>
                        </div>
                    </div>
                    <div class="mt-3 pt-1">
                        <p>Born in the year: @item.birth_year</p>
                    </div>
                    <div class="d-flex gap-2 pt-4">
                        <button class="align-content-center">
                            <i class="bx bx-user me-1"></i><a asp-action="PersonByUrl" asp-route-Url="@item.url">Details</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    }
</div>